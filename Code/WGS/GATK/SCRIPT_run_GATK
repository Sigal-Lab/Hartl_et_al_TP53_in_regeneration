SAMTOOLS=$(which samtools)
METADATA_FOLDER=${BASE_FOLDER}/metadata/
REGIONS=${BASE_FOLDER}/../GATK/mm10/call_regions_mm10_without_MaSat.bed

#SAMPLES=$(cut -f 1 $METADATA_FOLDER/all_samples.txt)

